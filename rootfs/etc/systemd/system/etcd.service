[Unit]
Description=etcd
Requires=scw-setup.service
Wants=network.target network-online.target scw-setup.service
After=network.target network-online.target scw-setup.service

[Service]
EnvironmentFile=-/etc/scw-env
Environment=ETCD_DATA_DIR=/var/lib/etcd
ExecStartPre = /bin/bash -c 'if test -d /var/lib/etcd/proxy && test -d /var/lib/etcd/member; then mv /var/lib/etcd /var/lib/etcd`date +%s`; fi'
ExecStart = /usr/bin/etcd
Restart=always
RestartSec=10s

[Install]
WantedBy=multi-user.target